rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Board objects: any authenticated user can read/write (shared board)
    match /boards/{boardId}/objects/{objectId} {
      allow read, write: if request.auth != null;
    }

    // Presence: any authenticated user can read; only own presence doc can be written
    match /boards/{boardId}/presence/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
